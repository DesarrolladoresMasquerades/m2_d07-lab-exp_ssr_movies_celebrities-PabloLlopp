<h2>Edit this movie!</h2>

<form action="/movies/{{_id}}/edit" method="POST">

    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="{{data.title}}">

    <label for="genre">Genre:</label>
    <input type="text" name="genre" id="genre" value="{{data.genre}}">

    <label for="plot">Plot:</label>
    <input type="text" name="plot" id="plot" value="{{data.plot}}">

    <label for="cast">Who appears in the movie?</label>
        
        <select name="cast" id="cast" multiple>
            {{#each celebrities}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>

    <button type="submit">Update</button>

</form>